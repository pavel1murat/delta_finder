# -*- mode:tcl -*-

#include "Offline/fcl/minimalMessageService.fcl"
#include "Offline/fcl/standardProducers.fcl"
#include "Offline/fcl/standardServices.fcl"

#include "Stntuple/fcl/stntuple.fcl"

process_name : TestDeltaFinder

physics : {

    producers : { @table::Reconstruction.producers

        ComboHitFilter : { @table::CalPatRec.producers.ComboHitFilter
            debugLevel : 1
        }

        DeltaFinder: { @table::CalPatRec.producers.DeltaFinder
            diagLevel                     : 1 ## 0 ##
            debugLevel                    : 1 ## 1 ##
            printErrors                   : 1
            chCollTag                     : @local::CH_COLL_TAG

            finderParameters : { @table::CalPatRec.producers.DeltaFinder.finderParameters 
            }

            diagPlugin : { @table::CalPatRec.producers.DeltaFinder.diagPlugin
                printDeltaSeeds           : 1
                printDeltaCandidates      : 1

                mcDiag                    : true
                printComboHits            : 1 ## 0 ##
                printElectrons            : 1 ## 0 ##
                printElectronsHits        : 1 ## 1 ##
                printElectronsMinMom      : 0.
                printElectronsMaxMom      : 20.
                printElectronsMinNHits    : 5   ## 30
                printElectronsMaxFReco    : 1.1 ## 0.2 ## 0.5
            }
        }
    }

    filters   : { @table::Reconstruction.filters   }
    analyzers : { @table::stntuple.analyzers       
        DeltaFinderAna: { @table::CalPatRec.analyzers.DeltaFinderAna
            chCollTag                     : @local::CH_COLL_TAG
            debugLevel                    : 1 ## 0
            printElectrons                : 1
            printElectronsMinNHits        : 5   ## 10   ## print electrons with N(straw hits>10)
            printElectronsMaxFReco        : 1.1 ## 0.2  ## and fraction of reconstructed hits < 
            printElectronHits             : 1
            printComboHits                : 0
        }
    }

    p1: [ @sequence::TrkHitReco.PrepareHits,                    DeltaFinder ]
    p3: [ @sequence::TrkHitReco.PrepareHits, ComboHitFilter   , DeltaFinder ]

    trigger_paths : [ @sequence::TRIGGER_PATH ]

    e1            : [ DeltaFinderAna ] ## MuHitDisplay  ] # defaultOutput ]
    end_paths     : [ e1             ]
}
source.firstRun    : 1210
source.firstSubRun :    0
source.firstEvent  :    1
source.maxEvents   :    1
source.fileNames   : [ "/mu2e/data2/users/murat/datasets/mdc2020/CeEndpointMix2BBSignal/dig.mu2e.CeEndpointMix2BBSignal.MDC2020r_perfect_v1_0.001210_00000000.art" ]

physics.producers.makePH.StrawHitSelectionBits     : [ "TimeSelection" ] ## take out "EnergySelection"
physics.producers.makePH.MaxDS                     : 4
physics.producers.makePH.CheckWres                 : true
physics.producers.makePH.MinimumRadius             : 370.
physics.producers.makePH.MaximumRadius             : 680.
